<Window x:Class="KartkowkaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KartkowkaWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <DockPanel LastChildFill="False">
            <StackPanel DockPanel.Dock="Left" Orientation="Vertical" Margin="20 10 20 10">
                <StackPanel.Resources>
                    <Style TargetType="CheckBox">
                        <Setter Property="Margin" Value="0 0 0 5" />
                    </Style>
                </StackPanel.Resources>
                <CheckBox Content="Write to a log file" />
                <CheckBox Content="Send log via email" />
                <CheckBox Content="Use Event log" />
            </StackPanel>
            <Grid DockPanel.Dock="Right" VerticalAlignment="Top" Margin="0 10 150 10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Select an email address:" />
                <TextBox Grid.Row="0" Grid.Column="1" Text="Przykładowy element 1" VerticalAlignment="Center" />
                <Label Grid.Row="1" Grid.Column="0" Content="Custom addresses:" />
            </Grid>
        </DockPanel>
        <Line Stroke="Black" Y1="0" Y2="0" X1="0" X2="800" StrokeThickness="3" />
        <TabControl>
            <TabItem Header="Application" >
                
            </TabItem>
            <TabItem Header="Deployment type" >

            </TabItem>
            <TabItem Header="Distribution" >

            </TabItem>
        </TabControl>
    </StackPanel>
</Window>
