<Window x:Class="SpokojnySklep.MainWindow"
        KeyDown="AddProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpokojnySklep"
        mc:Ignorable="d"
        Title="MainWindow" Height="490" Width="320" ResizeMode="NoResize">
    <DockPanel LastChildFill="False" Margin="15">
        <DockPanel.Resources>
            <Style TargetType="TextBox">
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
        </DockPanel.Resources>
        <GroupBox DockPanel.Dock="Top" Header="Product">
            <StackPanel Orientation="Vertical" Margin="25 15">
                <DockPanel LastChildFill="False">
                    <Label DockPanel.Dock="Left" Content="Product" VerticalAlignment="Center" />
                    <TextBox x:Name="productNameField" DockPanel.Dock="Right" IsEnabled="False" Width="175" />
                </DockPanel>
                <DockPanel LastChildFill="False" Margin="0 15 0 15">
                    <Label DockPanel.Dock="Left" Content="Price" />
                    <TextBox x:Name="productPriceField" DockPanel.Dock="Right" IsEnabled="False" Width="175" />
                </DockPanel>
                <DockPanel LastChildFill="False">
                    <Button x:Name="scrollLeftBtn" DockPanel.Dock="Left" Content="&lt;&lt;" Width="50" Click="scrollLeftBtn_Click" />
                    <Button x:Name="scrollRightBtn" DockPanel.Dock="Right" Content="&gt;&gt;" Width="50" Click="scrollRightBtn_Click" />
                </DockPanel>
            </StackPanel>
        </GroupBox>
        <GroupBox DockPanel.Dock="Left" Header="Discount" Height="150" Margin="0 30 0 0">
            <StackPanel Orientation="Vertical" Margin="10">
                <RadioButton x:Name="PercentageDiscountOption" Content="Percentage" Checked="PercentageDiscountOption_Checked" />
                <RadioButton x:Name="FixedAmountDiscountOption" Content="Fixed Amount" Checked="FixedAmountDiscountOption_Checked" Margin="0 10" />
                <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                    <TextBox x:Name="DiscountField" IsEnabled="False" Width="70" />
                    <Label Name="DiscountLabel" Content=" " />
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <GroupBox DockPanel.Dock="Right" Header="Price" Height="150" Margin="0 30 0 0">
            <StackPanel Orientation="Vertical" Margin="5">
                <DockPanel LastChildFill="False">
                    <Label DockPanel.Dock="Left" Content="Before: " />
                    <TextBox x:Name="cartValueBeforeDiscount" DockPanel.Dock="Right" IsEnabled="False" Width="75" />
                </DockPanel>
                <DockPanel LastChildFill="False" Margin="0 10">
                    <Label DockPanel.Dock="Left" Content="After: " />
                    <TextBox Name="cartValueAfterDiscount" DockPanel.Dock="Right" IsEnabled="False" Width="75" />
                </DockPanel>
                <Button x:Name="calculateCartBtn" Content="Calculate" Margin="0 15" Click="calculateCartBtn_Click"/>
            </StackPanel>
        </GroupBox>
    </DockPanel>
</Window>
