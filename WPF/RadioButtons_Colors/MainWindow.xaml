<Window x:Class="RadioButtons_Colors.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadioButtons_Colors"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <StackPanel x:Name="Kolory" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <RadioButton x:Name="Red" VerticalContentAlignment="Center" Content="Red" Width="100px" FontSize="20" Checked="RadioButton_Checked" />
            <RadioButton x:Name="Green" VerticalContentAlignment="Center" Content="Green" Width="100px" FontSize="20" Checked="RadioButton_Checked" />
            <RadioButton x:Name="Blue" VerticalContentAlignment="Center" Content="Blue" Width="100px" FontSize="20" Checked="RadioButton_Checked" />
        </StackPanel>
        <Border x:Name="ramka" BorderThickness="10px" BorderBrush="Yellow" Width="100px" Height="100px">
            <TextBlock x:Name="label" Background="Black" />
        </Border>
        <ListView x:Name="lista" HorizontalAlignment="Left" VerticalAlignment="Top" Width="194" Height="200" />
    </StackPanel>
</Window>
