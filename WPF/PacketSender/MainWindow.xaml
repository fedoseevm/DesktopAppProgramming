<Window x:Class="PacketSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PacketSender"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="6*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0" 
            Grid.Column="0" 
            Content="Enter your IP:"
            VerticalAlignment="Stretch" />
        <DockPanel
            Grid.Row="0" 
            Grid.Column="1"
            LastChildFill="False">
            
            <TextBox 
                DockPanel.Dock="Left"
                x:Name="ipInput"
                Text="0.0.0.0"
                Width="100" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Left" />
            <Button 
                x:Name="sendPacketsBtn"
                DockPanel.Dock="Right"
                Content="Send Packets"
                VerticalAlignment="Center"
                Margin="0 0 10 0" Click="sendPacketsBtn_Click"/>
        </DockPanel>
        
        <Label 
            Grid.Row="1" 
            Grid.Column="0" 
            Content="Port:"
            VerticalAlignment="Stretch" />
        <TextBox 
            x:Name="portInput"
            Grid.Row="1" 
            Grid.Column="1" 
            Text="0"
            Width="50" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Left" />
        
        <Label 
            Grid.Row="2" 
            Grid.Column="0" 
            Content="Number of Packets Sent:"
            VerticalAlignment="Stretch" />
        <TextBox 
            x:Name="numberOfPacketsInput"
            Grid.Row="2" 
            Grid.Column="1" 
            Text="0"
            Width="50" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Left" />

        <Label 
            Grid.Row="3" 
            Grid.Column="0" 
            Content="Packet Content:"
            VerticalAlignment="Top" />
        <RichTextBox
            x:Name="packetContentInput"
            Grid.Row="3"
            Grid.Column="1"
            Margin="0 0 10 15" />
    </Grid>
</Window>
