<Window x:Class="ModelViewListItem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ModelViewListItem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:TodoListViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel 
            Orientation="Horizontal"
            Grid.Row="0">
            <TextBox 
                Width="200" 
                Text="{Binding NewTodoItem}"
                />
            <Button 
                Name="Button_add"
                Width="80"
                Margin="10 0 0 0"
                Content="Dodaj"
                Command="{Binding AddNewItemCommand}"
                />
            <Button 
                Name="Button_select_all"
                Width="100"
                Margin="10 0 0 0"
                Content="Zaznacz wszystko"
                Command="{Binding SelectAllCommand}"
                />
            <Button 
                Name="Button_delete_selected"
                Width="100"
                Margin="10 0 0 0"
                Content="Usuń zaznaczone"
                Command="{Binding RemoveSelectedCommand}"
                />
        </StackPanel>
        <ListBox
            Name="Lista1"
            ItemsSource="{Binding TodoItems}"
            Grid.Row="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel
                        Orientation="Horizontal">
                        <CheckBox
                            IsChecked="{Binding IsDone}"
                            Margin="2 0 2 0" />
                        <TextBlock
                            Text="{Binding Text}" />
                        <Button
                            Margin="20 0 0 0"
                            Content="Usuń"
                            Command="{Binding DataContext.RemoveItemCommand,
                            ElementName=Lista1}"
                            CommandParameter="{Binding}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
